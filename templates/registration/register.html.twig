{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
{% block cover %}{% endblock %}

{% block body %}
<div class="container mt-5">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="md-form">
      {{ form_label(form.nickName, "Nom d'utilisateur") }}
      {{ form_widget(form.nickName, {'attr': {'class': 'form-control mb-4'}}) }}
    </div>
    <div class="md-form">
      {{ form_label(form.email, "Adresse mail") }}
      {{ form_widget(form.email, {'attr': {'class': 'form-control mb-4'}}) }}
    </div>
    <div class="md-form">
      {{ form_label(form.plainPassword.first, "Mot de passe") }}
      {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control mb-4'}}) }}
    </div>
    <div class="md-form">
      {{ form_label(form.plainPassword.second, "Confirmer votre mot de passe") }}
      {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control mb-4'}}) }}
    </div>
    <div class="md-form">
      {{ form_widget(form._token) }}
    </div>
    <button class="btn btn-primary">S'inscire</button>
</div>
{% endblock %}
