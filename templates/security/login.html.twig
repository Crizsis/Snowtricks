{% extends 'base.html.twig' %}

{% block body %}
{% block cover %}{% endblock %}

<div class="container mt-5">
  <div class="row">
    {% if error %}
    <div class="alert alert-danger">
      <ul>
        <li><span class="initialism form-error-icon badge badge-danger">Erreur</span></li>
        <li><span class="from-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</span></li>
      </ul>
    </div>
    {% endif %}
  </div>
  <div class="row">
    <div class="container">
      <div class="row login_form">
        {{form_start(form)}}
        <div class="md-form">
          {{ form_label(form._username, 'Adresse mail') }}
          {{ form_widget(form._username, {'attr': {'class': 'form-control mb-4'}}) }}
          {{ form_errors(form._username) }}
        </div>
        <div class="md-form">
          {{ form_label(form._password, 'Mot de passe') }}
          {{ form_widget(form._password, {'attr': {'class': 'form-control mb-4'}}) }}
          {{ form_errors(form._password) }}
        </div>
        <div class="login_btn">
          <button class="btn btn-primary">Connexion</button>
        </div>
        {{form_end(form)}}
      </div>
      <div class="login_footer">
        <div class="options" style="text-align: center;">
          <p><a href="{{path('user_registration')}}">Créer un compte</a></p>
          <p><a href="{{path('forgotten_password')}}">Mot de passe oublié</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
