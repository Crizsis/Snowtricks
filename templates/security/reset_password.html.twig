{% extends 'base.html.twig' %}
{% block title %}Récupération de votre mot de passe{% endblock %}

{% block body %}
<div class="row">
  <div class="container">
    <div class="row">
      {{form_start(form)}}
      <div class="form-group row">
        {{ form_label(form.plainPassword.first, 'Mot de passe') }}
        <div class="col-sm-10">
          <div class="md-form mt-0">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control mb-4'}}) }}
          </div>
        </div>
      </div>
      <div class="form-group row">
        {{ form_label(form.plainPassword.second, 'Confirmer le mot de passe' ) }}
        <div class="col-sm-10">
          <div class="md-form mt-0">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control mb-4'}}) }}
          </div>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10">
          <button class="btn btn-primary">Modifier</button>
        </div>
      </div>
      {{form_end(form)}}
    </div>
  </div>
</div>
{% endblock %}
