<!DOCTYPE html>
<html lang="fr">
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
      <meta http-equiv="x-ua-compatible" content="ie=edge">
      <title>SnowTricks</title>
      <!-- Google Font -->
      <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;700&display=swap" rel="stylesheet">
      <!-- Bootstrap core CSS -->
      <link href="{{asset('css/bootstrap.min.css')}}" rel="stylesheet">
      <!-- Material Design Bootstrap -->
      <link href="{{asset('css/mdb.min.css')}}" rel="stylesheet">
      <!-- Your custom styles (optional) -->
      <link href="{{asset('css/style.min.css')}}" rel="stylesheet">
      <link href="{{asset('css/mainstyle.css')}}" rel="stylesheet">
      {% block stylesheets %}{% endblock %}
    </head>
    <body style="font-family: 'Montserrat', sans-serif;">
        <!-- Navbar -->
        <nav class="navbar navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container">
            <a  class="navbar-brand" href="{{path('trick_index')}}">SnowTricks</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto">
                {% if is_granted('ROLE_USER') %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('trick_new')}}">Ajouter une figure</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('profile')}}">Profil</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('logout')}}">Déconnexion</a>
                  </li>
                {% endif %}
                {% if not is_granted('ROLE_USER') %}
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('login')}}">Connexion</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('user_registration')}}">Inscription</a>
                  </li>
                {% endif %}
              </ul>
            </diV>
          </diV>
        </nav>
        <!-- End Navbar -->
        {% block cover %}
        <!-- Full Cover -->
        <section class="container-fluid section_1 col-xs-12" style="padding: 0;">
          <div class="background" style="background-image: url('img/background.jpg'); background-size: cover; height: 100vh; width: 100%;">
            <div class="container-fluid d-flex flex-column justify-content-center align-items-center" style="height: inherit;">
              <h1 class="display-1 font-weight-bold" style="color: #FFF; border-bottom: solid 1px #FFF;">Snowtricks</h1>
            </div>
          </div>
        </section>
        <!-- End Full Cover -->
        {% endblock %}
        {% block body %}{% endblock %}
        {% block footer %}
        <!-- Footer -->
        <footer class="page-footer text-center font-small mt-4">
          <div class="footer-copyright">
             © 2020 Copyright: Quentin BORDILLON
          </div>
        </footer>
        <!-- End Footer -->
        {% endblock %}

        <!-- JQuery -->
        <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
				<!-- Bootstrap tooltips -->
				<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
				<!-- Bootstrap core JavaScript -->
				<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
				<!-- MDB core JavaScript -->
				<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.6.1/js/mdb.min.js"></script>
				<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <script type="text/javascript">
          {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
              new Noty({
                animation: {
                  open: 'animated bounceInRight', //Animate.css class name
                  close: 'animated bounceOutRight' //Animate.css class name
                },
                text: "<div class="text-center alert alert-{{type}}">{{message}}</div>",
              }).show();
            {% endfor %}
          {% endfor %}
        </script>
        <script type="text/javascript" src="{{asset('js/mainJs.js')}}"></script>
        <script type="text/javascript" src="{{asset('js/new_collection_widget.js')}}"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
